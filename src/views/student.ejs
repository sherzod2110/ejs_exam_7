<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../assets/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<body class="body">
    


    <div class="container-fluid p-0 d-flex">


        <div class="navbarr" >
            <div class="d-flex align-items-center justify-content-between border-2 border-bottom mx-auto p-4" style="width: 247px;">
                <img src="../assets/img/user.svg" alt="" width="48" height="48">
                <h2 class="heading">CRM <br> PANEL</h1>
                    <img src="../assets/img/menu.svg" alt="" width="40" height="40">
            </div>

            <ul class="list-unstyled m-0 mt-4">
                <a href="/xisobot" class="text-decoration-none d-flex item align-items-center gap-3" style="padding-left: 28px;">
                    <img src="../assets/img/Home.svg" alt="" width="26" height="26">
                    <p class="m-0">Xisobot</p>
                </a>

                <a href="/admins" class="text-decoration-none d-flex item align-items-center gap-3" style="padding-left: 28px;">
                    <img src="../assets/img/users-solid 1.svg" alt="" width="26" height="26">
                    <p class="m-0">Guruhlar</p>
                </a>

                <a href="/courses" class="text-decoration-none d-flex item align-items-center gap-3" style="padding-left: 28px;">
                    <img src="../assets/img/credit-card-solid 1.svg" alt="" width="26" height="26">
                    <p class="m-0">Kurslar</p>
                </a>

                <a href="/admin/teacher" class="text-decoration-none d-flex item align-items-center gap-3" style="padding-left: 28px;">
                    <img src="../assets/img/user.svg" alt="" width="26" height="26">
                    <p class="m-0">O'qituvchi</p>
                </a>

                <a href="/admin/student" class="text-decoration-none d-flex item align-items-center gap-3" style="padding-left: 28px;">
                    <img src="../assets/img/graduation-cap-solid 1 (1).svg" alt="" width="26" height="26">
                    <p class="m-0">O'quvchilar</p>
                </a>
            </ul>
            
        </div>


        <div class="w-100">

            <div class="nav p-3 pe-5 d-flex justify-content-between align-items-center">
                <h2 class="head">O'quvchi</h2>
                <p class="p-0 time"><%= time  %> </p>
                <div class="gap-3 d-flex">
                    <img src="../assets/img/Group 40.svg" alt="">
                    <img src="../assets/img/Group 42.svg" alt="">
                </div>
            </div>

            <div class="box">
                <h1 class="new-team">O'quvchi qo'shish</h1>

                <form action="/admin/student" method="post" enctype="application/x-www-form-urlencoded">
                    <div class="d-flex flex-wrap gap-4">
                        <div class="box-2">
                            <p class="spn">O'quvchini ismi</p>
                            <input class="inp-inp" type="text" name="userName" placeholder="O'quvchi ismi" required autocomplete="off">
                        </div>
    
                        <div class="box-2">
                            <p class="spn">Saytga kirish uchun password</p>
                            <input class="inp-inp" type="number" name="password" placeholder="Password" required autocomplete="off">
                        </div>
    
                        <div class="box-2">
                            <p class="spn">Guruh nomi</p>
                            <select class="inp-inp" type="text" name="guruhi" placeholder="O'quvchini guruhi" required>
                                <option value="" disabled selected> Guruh nomi </option>
                                <% allGroup.forEach(e => { %>
                                    <option value= "<%= e.id %>" > <%= e.groupName %> </option>
                                  <% }) %>
                            </select>
                        </div>

                        <div class="box-2">
                            <p class="spn">O'quvchini nomeri</p>
                            <input class="inp-inp" type="text" name="tel" placeholder="O'quvchini nomeri" required autocomplete="off" value="+998">
                        </div>


                        
                        <div>
                            <button class="button-2">Qoâ€™shish</button>
                        </div>
                    </div>
                </form>


                <h1 class="pt-4 new-team">Mavjud O'quvchilar</h1>
              
                <ul class="list-unstyled d-flex gap-5 mt-3 flex-wrap list-2 pb-2">
                    <% student.forEach(e => { %>
                        <li class="item-3 p-3">
                            <p class="spn-rol text-center mb-2 text-primary fw-bold">Student</p>
                          <p class="text-tech"><span class="spn-rol">Role:</span> <span class="sd"><%= e.role %></span> </p>
                          <p class="text-tech"><span class="spn-rol">Name:</span> <span class="sd"><%= e.userName %></span> </p>
                          <p class="text-tech"><span class="spn-rol">Telefon:</span> <span class="sd"><%= e.tel %></span> </p>
                          <p class="w-100">
                            <form action="/admin/student-delete" method="post">
                                <input type="hidden" name="id" value="<%= e.id %>">
                                 <button class="btn btn-danger w-100" id="<%= e.id %>">Delete</button>
                            </form>
                          </p>
                        </li>
                      <% }) %>
                </ul>
               
                      
                    

            </div>

        </div>




    </div>


</body>
</html>